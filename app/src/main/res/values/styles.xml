    <style name="ClassicThemeHasPreferenceCompatTheme" parent="ClassicTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="ClassicThemeMy" parent="ClassicTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       <!-- <item name="android:windowBackground">@color/windowBackground</item>-->
    </style>

    <style name="ClassicThemeTransparentMy" parent="ClassicTheme.Transparent">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
      <!--  <item name="android:windowBackground">@color/windowBackground</item>-->
    </style>

    <style name="ClassicThemeSplashFullscreen" parent="ClassicTheme.Transparent.Splash">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ClassicTextInputLayout">
        <item name="hintEnabled">false</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="ClassicTextInputEditText">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="ClassicSelectViewStyle">
        <item name="android:background">@drawable/selector_classic_form_right_bottom_item_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="ClassicRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
    </style>


</resources>
