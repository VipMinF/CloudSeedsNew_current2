<?xml version="1.0" encoding="utf-8"?><!-- android:layout_marginTop="@dimen/base_item_comm_margin"-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/id_tv_item_title"
            style="@style/ClassicTextPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:lines="1"
            android:textSize="14dp"
            tools:text="标题" />

        <View
            android:id="@+id/id_view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/id_tv_item_title"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:background="#66000000" />

        <LinearLayout
            android:id="@+id/id_ll_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_view_line"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/ClassicTextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="分类："
                android:textSize="14dp" />

            <TextView
                android:id="@+id/id_tv_item_product"
                style="@style/ClassicTextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="dasdasdas"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_ll_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_ll_product"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/ClassicTextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="计划类型："
                android:textSize="14dp" />

            <TextView
                android:id="@+id/id_tv_item_plan"
                style="@style/ClassicTextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="dsadsdad"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_item_more"
            style="@style/ClassicTextPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:lines="1"
            android:text="2017-3-10"
            android:textSize="14dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>